<%- include('layout/header', {title: title}) -%>

<div class="container">
    <div class="row">
        <div id="tags" class="col-md-10 well">

            <% tags.forEach(function(tag){ %>
            <a id="<%= tag._id %>" class="btn btn-default btn-xs tag-radius" type="button" style="margin-top: 3px; margin-bottom: 3px;" onclick="clickTag(this);">
                <%= tag._id %> <span class="badge"><%= tag.count %></span>
            </a>
            <% }); %>

        </div>
        <div class="col-md-2" style="vertical-align: middle">
            <a href="/random" type="button" class="btn btn-default btn-lg center-block">
                <span class="glyphicon glyphicon-random" aria-hidden="true"></span> Random
            </a>
        </div>
    </div>

    <br>

    <%- include('partials/webmsGrid', {webms: webms, viewPath: viewPath}) -%>
</div>


<script>
    var lastSeqid = '<%= lastSeqid %>';
</script>

<script src="/vendors/js.cookie-2.0.3.min.js"></script>
<script src="/index.js"></script>