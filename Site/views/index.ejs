<div class="container">
    <div class="row">
        <div class="col-sm-10 well">

            <% tags.forEach(function(tag){
                if (tag._id !== 'danger' || authorized) {
            %>

            <a id="<%= tag._id %>" class="btn btn-default btn-xs tag-radius" type="button" style="margin-top: 3px; margin-bottom: 3px;" onclick="clickTag(this);">
                <%= tag._id %> <span class="badge"><%= tag.count %></span>
            </a>
            <% }}); %>

        </div>
