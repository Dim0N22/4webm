    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
</head>
<body style="padding-top: 70px; padding-bottom: 30px;">
<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <div class="navbar-header">
                <% if (authorized) { %>
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-3" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <% } %>
                <a class="navbar-brand" href="/"><%= projectName %></a>
                <ul class="nav navbar-nav" style="margin-bottom: 0px; margin-top: 7.5px">
                    <a href="/random" type="button" class="btn btn-default">
                        <span class="glyphicon glyphicon-random" aria-hidden="true"></span> Random
                    </a>
                </ul>

                <!--<ul class="nav navbar-nav pull-left">-->
                    <!--<li class="active">-->
                        <!--<a href="/random">-->
                        <!--<span class="glyphicon glyphicon-random" aria-hidden="true"></span> Random-->
                        <!--</a>-->
                    <!--</li>-->
                <!--</ul>-->
            </div>
        </div>

        <div class="navbar-collapse collapse" id="bs-example-navbar-collapse-3" aria-expanded="false" style="height: 1px;">
            <% if (authorized) { %>

            <ul class="nav navbar-nav navbar-right">
                <li><a href='/doubles'>Дубли</a></li>

                <li><p style="margin-left: 15px" class="navbar-text"><%= user && user.login %></p></li>

                <li>
                    <form style="margin-left: 0px" class="navbar-form" role="search" action="logout" method="post">
                        <button type="submit" class="btn btn-default">Выход</button>
                    </form>
                </li>
            </ul>
            <% } %>
        </div>
    </div>
</nav>

<div class="container">
    <div class="row">
        <div id="tags" class="col-md-2">
            <div class="well hidden-print" data-spy="affix" role="complementary" data-offset-top="0">
            <% tags.forEach(function(tag){ %>
                <a id="<%= tag._id %>" class="btn btn-default btn-xs tag-radius" type="button" style="margin-top: 3px; margin-bottom: 3px;" onclick="clickTag(this);">
                    <%= tag._id %> <span class="badge"><%= tag.count %></span>
                </a>
                <div class="visible-md-block visible-lg-block">
                    <!-- for new line-->
                </div>
            <% }); %>
            </div>
        </div>
        <div class="col-md-10">
            <%- include('partials/webmsGrid', {webms: webms, viewPath: viewPath}) -%>
        </div>
    </div>
</div>


<script>
