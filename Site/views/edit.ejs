<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title><%= title %></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
<nav class="navbar navbar-default navbar-static-top">
    <div class="container">
        <div class="navbar-header">
            <a class="navbar-brand" href="/"><%= projectName %></a>
        </div>
    </div>
</nav>

<div class="container" style="margin-top: 5%">
    <div class="row">
        <div class="col-md-2 hidden-xs hidden-sm"></div>
        <div class="col-md-4 col-xs-6 col-sm-6"><em>#<%= id %></em></div>
        <div class="col-md-4 col-xs-6 col-sm-6">
            <div class="pull-right">
                <div class="btn-group" role="group" aria-label="...">
                    <a type="button" id="autoCycle" class="btn btn-link btn-xs" title="Зациклить"><span class="glyphicon glyphicon-retweet" aria-hidden="true"></span></a>
                    <a type="button" id="likeABoss" class="btn btn-link btn-xs" title="LIKE A BOSS"><span class="glyphicon glyphicon-sunglasses" aria-hidden="true"></span></a>
                    <a type="button" id="autoNext" class="btn btn-link btn-xs" title="Автопереход"><span class="glyphicon glyphicon-forward" aria-hidden="true"></span></a>
                </div>
            </div>
        </div>
        <div class="col-md-2 hidden-xs hidden-sm"></div>
    </div>
    <div class="row">
        <div class="col-md-2 hidden-xs hidden-sm navigate-arrow">
            <a id="prev" href="<%= prevHref %>">
                <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
            </a>
        </div>
        <div class="col-md-8">

            <div class="embed-responsive embed-responsive-16by9">
                <video id="webm" class="embed-responsive-item" controls>
                    <source src="<%= videoSrc %>" type="video/webm">
                    Your browser does not support HTML5 video.
                </video>
            </div>

        </div>
        <div class="col-md-2 hidden-xs hidden-sm navigate-arrow">
            <a id="next" href="<%= nextHref %>">
                <span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span>
            </a>
        </div>
    </div>

    <div class="row" style="margin-top: 10px">
        <div class="col-md-2 hidden-xs hidden-sm"></div>
        <div class="col-md-6">
            <% tags.forEach(function(tag){ %>
            <a type="button"
               class="btn btn-xs tag-radius <% if (tag.enable) { %> btn-success <% } else{ %> btn-default <% } %>"
               style="margin-top: 5px"
               data-tag="<%= tag.name %>"
               onclick="clickTag(this);"><%= tag.name %></a>
            <% }); %>
        </div>
        <div class="col-md-2">
            <button type="button"
                    class="btn <% if (danger) { %> btn-danger <% } else{ %> btn-default <% } %>"
                    data-tag="danger"
                    style="margin-top: 5px"
                    onclick="clickTag(this);">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span> Пожаловаться
            </button>
        </div>
        <div class="col-md-2 hidden-xs hidden-sm"></div>
    </div>
</div>


<script>
    var webmId = '<%= id %>';
</script>

<script src="http://code.jquery.com/jquery-2.1.4.min.js"></script>
<script src="/vendors/mousetrap.min.js"></script>
<script src="/view.js"></script>
</body>
</html>