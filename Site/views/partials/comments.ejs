<div class="panel panel-default">
    <div class="panel-heading">
        <form id="formComments" class="form-horizontal" role="form">
            <div class="form-group row">
                <div class="col-md-4 col-xs-8">
                    <input id="username" type="text" class="form-control" placeholder="Имя">
                </div>
                <div class="col-md-4 hidden-xs"></div>
                <div class="col-md-4 col-xs-4 text-right">
                    <button id="sendComment" class="btn btn-default">Отправить</button>
                </div>
            </div>
            <textarea id="comment" class="form-control" maxlength="140"></textarea>
        </form>
    </div>
    <div class="panel-body">
        <ul id="messages" class="list-unstyled">
            <% comments.forEach(function(comment){ %>
            <li>
                <div class="panel panel-default panel-default">
                    <div class="panel-heading"><%= comment.name + ' ' + formatDate(new Date(comment.when)) %></div>
                    <div class="panel-body"><%= comment.msg %></div>
                </div>
            </li>
            <% }); %>
        </ul>
    </div>
</div>